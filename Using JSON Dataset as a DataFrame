val customers = sqlContext.jsonFile("/tmp/customer1.json")
customers.printSchema()
customers.registerTempTable("customers")
val duke = sqlContext.sql("select * from customers where firstname == 'Duke'")
duke.take(1)
val bad = sc.parallelize("""{"state":"SP1""zip":"12345"}""" :: Nil)
val badRDD = sqlContext.jsonRDD(bad)
val good = sc.parallelize("""{"state":"SP1","zip":"12345"}""" :: Nil)
val goodRDD = sqlContext.jsonRDD(good)
goodRDD.show()
